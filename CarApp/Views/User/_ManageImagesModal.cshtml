@model CarListingEditViewModel

<style>
    #addImagesModal .modal-dialog {
        max-width: 80%; /* Set this to the desired width */
        margin: 30px auto; /* Center the modal horizontally with some space on top */
    }

    /* Optionally, you can adjust the modal content height to make it larger */
    #addImagesModal .modal-content {
        min-height: 100%; /* Auto height to accommodate content */
        max-height: 100%; /* Max height of 80% of the viewport height */
    }

    /* Optionally, adjust the padding inside the modal */
    #addImagesModal .modal-body {
        padding: 20px; /* Adjust the padding inside the modal */
    }

    /* If needed, also adjust the modal header */
    #addImagesModal .modal-header {
        padding: 15px 20px; /* Adjust padding in the header */
    }

    /* You can further adjust the modal footer if necessary */
    #addImagesModal .modal-footer {
        padding: 10px 20px; /* Adjust footer padding */
    }
    .modal-close {
        visibility: hidden;
    }

    .modal-close-icon {
        font-size:1.6rem;
        visibility: visible;
    }

    #addImagesModal .modal-body {
        padding: 15px;
    }

    /* Set a uniform height for image containers to ensure equal size */
    #addImagesModal .image-container {
        position: relative;
        width: 100%;
        height: 300px; /* Adjust the height as per your requirements */
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f0f0f0;
        overflow: hidden;
    }

        /* Ensure images scale correctly within the container */
        #addImagesModal .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Ensures the image covers the area without distortion */
        }

    /* Remove spacing and ensure consistency in columns */
    #addImagesModal .modal-body .row {
        display: flex;
        flex-wrap: wrap;
        gap: 15px; /* Gap between columns */
    }

    #addImagesModal .modal-body .col-md-4 {
        flex: 1 1 30%; /* Ensures each image takes up 1/3 of the container */
        max-width: 30%;
    }

    /* Add a button spacing to make sure it's not crowded */
    #addImagesModal .modal-body .btn {
        position: absolute;
        bottom: 10px;
        left: 50%;
        transform: translateX(-50%);
    }
</style>

<div class="modal fade" id="addImagesModal" data-car-id="@Model.Id" tabindex="-1" role="dialog" aria-labelledby="addImagesModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addImagesModalLabel">Manage Images</h5>
                <button type="button" class="close modal-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="modal-close-icon">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Existing images display in a grid or carousel -->
                <h6>Existing Images</h6>
                <!-- New images input -->
                <div class="form-group mb-3 text-center">
                    <label for="NewCarImages">Add Images</label>
                    <input asp-for="NewCarImages" type="file" class="form-control-file" id="NewCarImages" name="NewCarImages" multiple>
                    <span asp-validation-for="NewCarImages" class="text-danger"></span>
                </div>
                <div class="row">
                    @foreach (var image in Model.CarImages)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="image-container">
                                <img src="~/images/@image.ImageUrl" class="img-fluid img-thumbnail" alt="Car Image">
                                <!-- You could add a button to delete or manage images here -->
                                <button type="button" class="btn btn-danger btn-sm mt-2" onclick="removeImage('@image.Id')">Remove</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>