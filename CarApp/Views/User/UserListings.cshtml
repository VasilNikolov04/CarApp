@model IEnumerable<CarInfoViewModel>



@if(!Model.Any())
{
    <div class="d-flex flex-column justify-content-center align-content-center mb-3" style="">
        <h2 class="text-center">You don't have any car listings'</h2>
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <a asp-controller="CarListings" asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i>Add Car Listing</a>
        }
        
    </div>
    <hr />
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <a asp-controller="CarListings" asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i>Add Car Listing</a>
        }
    </div>
    <hr />
}
<style>
    .card-img-top {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

</style>
<div class="row text-center">
    @foreach (var carListing in Model)
    {
        <partial name="_CarListingPartial" model="@carListing" />
    }
</div>