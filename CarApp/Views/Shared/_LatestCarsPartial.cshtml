@model IEnumerable<FeaturedCarsViewModel>
<style>
    .car-image {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-bottom: 1px solid #ddd;
    }
</style>
<div class="latest-cars-container">
    @if (Model != null && Model.Any())
    {
        foreach (var car in Model)
        {
            <a asp-controller="CarListings" asp-action="Details" asp-route-id="@car.Id" class="text-reset text-decoration-none">
            <div class="car-card">
                <img src="~/images/@car.ImageUrl" alt="@car.Model" class="car-image" />
                <div class="car-details">
                        <h3><strong>@car.Brand @car.Model @car.Trim </strong>(@car.Year)</h3>
                    <h3><strong>Price:</strong> @car.Price</h3>
                    <span><strong>Location:</strong> @car.LocationRegion, @car.LocationCity </span>
                </div>
            </div>
            </a>
        }
    }
    else
    {
        <p>No cars available at the moment. Please check back later.</p>
    }
</div>