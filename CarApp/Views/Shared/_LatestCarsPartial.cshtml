@model IEnumerable<FeaturedCarsViewModel>
<style>
    .car-image {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-bottom: 1px solid #ddd;
    }

    .latest-cars-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
        background-color: #85c0ff;
        border-radius: 8px;
    }

    .car-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        background-color: #f2f2f2;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

        .car-card:hover {
            transform: translateY(-5px);
        }


    .car-details {
        padding: 10px;
        text-align: center;
    }

        .car-details h3 {
            margin: 10px 0;
            font-size: 1.2em;
            color: #333;
        }

        .car-details p {
            margin: 5px 0;
            font-size: 0.9em;
            color: #666;
        }

    .btn-view-details {
        display: inline-block;
        margin-top: 10px;
        padding: 5px 15px;
        background-color: #ff5722;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .btn-view-details:hover {
            background-color: #e64a19;
        }

</style>
<div class="latest-cars-container">
    @if (Model != null && Model.Any())
    {
        foreach (var car in Model)
        {
            <a asp-controller="CarListings" asp-action="Details" asp-route-id="@car.Id" class="text-reset text-decoration-none">
            <div class="car-card">
                <img src="~/images/@car.ImageUrl" alt="@car.Model" class="car-image" />
                <div class="car-details">
                        <h3><strong>@car.Brand @car.Model @car.Trim </strong>(@car.Year)</h3>
                    <h3><strong>Price:</strong> @car.Price</h3>
                    <span><strong>Location:</strong> @car.LocationRegion, @car.LocationCity </span>
                </div>
            </div>
            </a>
        }
    }
    else
    {
        <p>No cars available at the moment. Please check back later.</p>
    }
</div>