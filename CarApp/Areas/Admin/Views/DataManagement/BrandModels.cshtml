@model BrandModelsViewModel

<div class="container mt-5">
    <h1 class="text-center mb-4">Models Management</h1>

    <div class="container mt-5">
        <div class="d-flex justify-content-center align-items-center">
            <a asp-area="Admin" asp-controller="DataManagement" asp-action="Index" class="btn btn-secondary">Go Back</a>
        </div>
    </div>
    <form method="post" asp-area="Admin" asp-controller="DataManagement" asp-action="CreateModel">
        @Html.AntiForgeryToken()
            <input type="text" id="newModel" name="newModelName" placeholder="New Model Name" required />
            <input type="hidden" name="brandId" value="@Model.BrandId" />
            <button type="submit" class="btn btn-success mb-3">Add New Model</button>
    </form>

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Model Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var carModel in Model.CarModels)
            {
                <tr>
                    <td>@carModel.ModelId</td>
                    <td>
                        <form method="post" asp-action="EditModel" asp-controller="DataManagement" asp-area="Admin" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="modelId" value="@carModel.ModelId" />
                            <input type="text" name="modelName" value="@carModel.ModelName" />
                            <input type="hidden" name="brandId" value="@Model.BrandId" />
                            <button type="submit" class="btn btn-warning btn-sm">Save</button>
                        </form>
                    </td>
                    <td>
                        <form method="post" asp-action="DeleteModel" asp-controller="DataManagement" asp-area="Admin" class="d-inline ms-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="modelId" value="@carModel.ModelId" />
                            <input type="hidden" name="brandId" value="@Model.BrandId" />
                            <input type="hidden" name="modelCount" value="@Model.CarModels.Count()" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>